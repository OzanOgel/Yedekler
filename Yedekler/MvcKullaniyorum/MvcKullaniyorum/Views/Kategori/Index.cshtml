@model IEnumerable<MvcKullaniyorum.Models.Categories>
@using MvcKullaniyorum.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}
<div>
    <a href="@Url.Action("Ekle","Kategori")" class="eklebutton"> + Kategori Ekle</a>
</div>
<table class="tablo" cellpadding="0" cellspacing="0">
    <tr>
        <th>ID</th>
        <th>İsim</th>
        <th>Açıklama</th>
        <th>Seçenekler</th>
    </tr>

    @foreach (Categories item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td></td>
        </tr>

    }

</table>


